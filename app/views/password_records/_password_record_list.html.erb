<div class="flex justify-between items-center px-5 py-4 bg-gray-100 hover:bg-gray-50 mb-4 rounded-lg shadow-md">
  <div class="space-y-1">
    <%= link_to password_record.title, password_record, class: "text-lg font-medium" %>
    <p class="text-sm text-gray-500">
      <%= link_to password_record.url, password_record.url, target: "_blank", class: "text-blue-600 underline" %>
    </p>
  </div>

  <div class="flex space-x-2">
    <%= link_to "View", password_record, class: "text-blue-400 hover:underline text-sm" %>
    <% if owned %>
      <%= link_to "Edit", edit_password_record_path(password_record), class: "text-gray-600 hover:underline text-sm" %>
      <%= link_to "Delete", password_record, method: :delete, class: "text-red-600 hover:underline text-sm", data: { turbo_confirm: "Are you sure?" } %>
    <% end %>
  </div>
</div>