<div class="max-w-md">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Share Access</h2>

  <%= form_with url: shared_access_index_path, method: :post, class: "space-y-4 mb-4", data: { turbo: false } do |f| %>
    <div class="relative">
      <%= f.email_field :email, placeholder: "Enter user's email", required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all" %>
      <% if flash[:error] %>
        <p class="mt-1 text-sm text-red-600"><%= flash[:error] %></p>
      <% end %>
    </div>

    <div class="relative">
      <%= label_tag :password_record_id, "Select Password Record (Optional)", class: "block text-sm font-medium text-gray-700" %>
      <%= select_tag :password_record_id, options_from_collection_for_select(current_user.password_records, "id", "title"), include_blank: "Share All", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all" %>
    </div>

    <div class="flex items-center gap-3">
      <%= f.submit "Share Access", class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-150" %>
    </div>
  <% end %>
</div>
