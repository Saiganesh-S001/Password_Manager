<h2 class="text-4xl font-semibold text-center text-gray-800 mb-6">Log in</h2>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "rounded text-indigo-600 focus:ring-indigo-500" %>
        <%= f.label :remember_me, class: "ml-2 text-sm text-gray-700" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit "Log in", class: "w-full px-4 py-2 bg-indigo-600 text-black font-semibold rounded-lg hover:bg-indigo-700 transition duration-200" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
